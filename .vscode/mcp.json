{
  "servers": {
    "filesystem": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        // Monta el directorio de trabajo de VS Code en /projects/workspace
        "--mount", "type=bind,src=${workspaceFolder},dst=/projects/workspace",
        // Ejecuta el servidor MCP con /projects como el directorio permitido
        "mcp/filesystem",
        "/projects" 
      ]
    }
  }
}